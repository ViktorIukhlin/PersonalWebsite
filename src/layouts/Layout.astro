---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Viktor Iukhlin - Senior Frontend Engineer" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" href={`${import.meta.env.BASE_URL}/favicon.ico`} sizes="48x48" />
    <link rel="icon" type="image/png" sizes="16x16" href={`${import.meta.env.BASE_URL}/favicon-16x16.png`} />
    <link rel="icon" type="image/png" sizes="32x32" href={`${import.meta.env.BASE_URL}/favicon-32x32.png`} />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}/favicon.svg`} />
    <link rel="apple-touch-icon" sizes="180x180" href={`${import.meta.env.BASE_URL}/apple-touch-icon.png`} />
    <meta name="theme-color" content="#0a0a0a" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    <title>{title}</title>
    <script is:inline>
      (function() {
        const theme = localStorage.getItem('theme');
        if (theme) {
          document.documentElement.setAttribute('data-theme', theme);
        }
      })();
    </script>
  </head>
  <body>
    <slot />
    <script>
      function initSectionAnimations() {
        const sections = document.querySelectorAll('section[id]');
        let isQuickNavigating = false;

        // Make sections above current scroll position visible immediately
        function showSectionsAboveScroll() {
          const scrollY = window.scrollY;
          sections.forEach((section) => {
            const sectionTop = (section as HTMLElement).offsetTop;
            if (sectionTop < scrollY + window.innerHeight) {
              section.classList.add('visible');
            }
          });
        }

        // Observer for normal scrolling - animate sections into view
        const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              // If quick navigating, show instantly without animation
              if (isQuickNavigating) {
                (entry.target as HTMLElement).style.transition = 'none';
                entry.target.classList.add('visible');
                // Restore transition after a frame
                requestAnimationFrame(() => {
                  (entry.target as HTMLElement).style.transition = '';
                });
              } else {
                entry.target.classList.add('visible');
              }
            }
          });
        }, {
          threshold: 0.05,
          rootMargin: '0px 0px -20px 0px'
        });

        sections.forEach((section) => {
          if (section.id !== 'home') {
            observer.observe(section);
          }
        });

        // Listen for navigation clicks to enable quick navigation mode
        document.querySelectorAll('.nav-item').forEach((item) => {
          item.addEventListener('click', () => {
            isQuickNavigating = true;
            // Make all sections visible instantly during navigation
            sections.forEach((section) => {
              (section as HTMLElement).style.transition = 'none';
              section.classList.add('visible');
            });
            // Restore transitions after navigation completes
            setTimeout(() => {
              sections.forEach((section) => {
                (section as HTMLElement).style.transition = '';
              });
              isQuickNavigating = false;
            }, 100);
          });
        });

        // Initial check for sections already in view
        showSectionsAboveScroll();
      }

      document.addEventListener('DOMContentLoaded', initSectionAnimations);
      document.addEventListener('astro:page-load', initSectionAnimations);
    </script>
  </body>
</html>

<style is:global>
  :root {
    --color-bg: #000000;
    --color-text: #ffffff;
    --color-text-muted: #9ca3af;
    --color-accent: rgb(255, 184, 0);
    --color-accent-hover: rgb(255, 200, 50);
    --color-border: #333;
    --color-card-bg: #111;
    --font-sans: 'Inter', system-ui, -apple-system, sans-serif;
  }

  [data-theme="light"] {
    --color-bg: #f5f5f5;
    --color-text: #1a1a1a;
    --color-text-muted: #6b7280;
    --color-accent: #4a9fd4;
    --color-accent-hover: #3a8fc4;
    --color-border: #e5e5e5;
    --color-card-bg: #ffffff;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html,
  body {
    margin: 0;
    padding: 0;
    overflow-x: hidden;
  }

  html {
    font-family: var(--font-sans);
    background: #1a1a1a;
    color: var(--color-text);
    scroll-behavior: smooth;
  }

  [data-theme="light"] {
    background: #f0f0f0;
  }

  body {
    min-height: 100vh;
    line-height: 1.6;
    background: transparent;
  }

  section {
    position: relative;
    z-index: 1;
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  section.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Hero section should be visible immediately */
  section#home {
    opacity: 1;
    transform: translateY(0);
  }

  a {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s, opacity 0.2s;
  }

  a:hover {
    color: var(--color-accent);
  }

  ul {
    list-style: none;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 10%;
  }

  .section-title {
    font-size: 3.5rem;
    font-weight: 700;
    color: var(--color-accent);
    margin-bottom: 3rem;
  }

  @media (max-width: 768px) {
    .section-title {
      font-size: 2.5rem;
    }
  }
</style>
