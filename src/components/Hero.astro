---
import { profile } from '../data/profile';

interface Props {
  navItems: { id: string; label: string }[];
}

const { navItems } = Astro.props;
---

<section id="home" class="hero">
  <div class="hero-content">
    <div class="hero-badge">
      <span class="badge-dot"></span>
      <span>Open to work</span>
    </div>

    <a href={`${import.meta.env.BASE_URL}Viktor_Iukhlin_CV.pdf`} class="btn-download" download>
      Download CV
    </a>

    <div class="hero-info">
      <p class="hero-role">{profile.title.toUpperCase()}</p>
      <h1 class="hero-name">{profile.name}</h1>

      <div class="hero-contacts">
        <a href={`mailto:${profile.email}`} class="contact-item">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="2" y="4" width="20" height="16" rx="2"/>
            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
          </svg>
          <span>{profile.email}</span>
        </a>
        <a href={`tel:${profile.phone}`} class="contact-item">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
          <span>{profile.phone}</span>
        </a>
        <a href={profile.linkedin} target="_blank" rel="noopener" class="contact-item">
          <svg viewBox="0 0 24 24" fill="currentColor">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
          <span>LinkedIn</span>
        </a>
        <div class="contact-item location">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/>
            <circle cx="12" cy="10" r="3"/>
          </svg>
          <span>{profile.location}</span>
        </div>
      </div>
    </div>

    <nav class="hero-nav">
      {navItems.map((item) => (
        <a href={`#${item.id}`} class={item.id === 'home' ? 'active' : ''}>
          {item.label}
        </a>
      ))}
    </nav>
  </div>

  <div class="hero-image">
    <div class="hero-image-placeholder">
      <span>Photo</span>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: grid;
    grid-template-columns: 1fr 1fr;
    position: relative;
    overflow: hidden;
  }

  .hero-content {
    padding: 2rem 3rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    z-index: 2;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    margin-bottom: 1rem;
    position: absolute;
    top: 2rem;
    left: 3rem;
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: #22c55e;
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .btn-download {
    position: absolute;
    top: 2rem;
    right: 3rem;
    background: var(--color-accent);
    color: #000;
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    font-weight: 600;
    font-size: 0.9rem;
    transition: background 0.2s, transform 0.2s;
  }

  .btn-download:hover {
    background: var(--color-accent-hover);
    color: #000;
    transform: translateY(-2px);
  }

  .hero-info {
    margin-top: 4rem;
  }

  .hero-role {
    color: var(--color-accent);
    font-size: 1.1rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
  }

  .hero-name {
    font-size: 4rem;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 2rem;
  }

  .hero-contacts {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--color-text-muted);
    font-size: 0.9rem;
    transition: color 0.2s;
  }

  .contact-item:hover {
    color: var(--color-accent);
  }

  .contact-item.location {
    cursor: default;
  }

  .contact-item.location:hover {
    color: var(--color-text-muted);
  }

  .contact-item svg {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
    color: var(--color-accent);
  }

  .hero-nav {
    position: absolute;
    bottom: 2rem;
    left: 3rem;
    display: flex;
    gap: 0.5rem;
    background: rgba(30, 30, 30, 0.9);
    padding: 0.5rem;
    border-radius: 50px;
    backdrop-filter: blur(10px);
  }

  .hero-nav a {
    padding: 0.75rem 1.25rem;
    border-radius: 50px;
    font-size: 0.9rem;
    color: var(--color-text-muted);
    transition: all 0.2s;
  }

  .hero-nav a:hover,
  .hero-nav a.active {
    background: rgba(255, 255, 255, 0.1);
    color: var(--color-text);
  }

  .hero-image {
    position: relative;
    background: linear-gradient(135deg, #1a1a1a 0%, #0a0a0a 50%, #d4a84b22 100%);
  }

  .hero-image::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 70% 50%, rgba(212, 168, 75, 0.3) 0%, transparent 60%);
  }

  .hero-image-placeholder {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    color: var(--color-text-muted);
  }

  @media (max-width: 1024px) {
    .hero {
      grid-template-columns: 1fr;
      min-height: auto;
    }

    .hero-content {
      padding: 6rem 2rem 2rem;
    }

    .hero-badge {
      left: 2rem;
    }

    .btn-download {
      right: 2rem;
    }

    .hero-nav {
      left: 2rem;
      position: relative;
      bottom: auto;
      margin-top: 2rem;
      flex-wrap: wrap;
      justify-content: center;
    }

    .hero-image {
      display: none;
    }

    .hero-name {
      font-size: 3rem;
    }
  }

  @media (max-width: 768px) {
    .hero-name {
      font-size: 2.5rem;
    }

    .hero-contacts {
      grid-template-columns: 1fr;
    }
  }
</style>
