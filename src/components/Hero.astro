---
import { profile } from '../data/profile';
import ThemeToggle from './ThemeToggle.astro';
---

<section id="home" class="hero">
  <div class="hero-header">
    <ThemeToggle />

    <a href={`${import.meta.env.BASE_URL}Viktor_Iukhlin_CV.pdf`} class="btn-download" download>
      <span class="btn-content">
        <span class="btn-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
            <polyline points="7 10 12 15 17 10"/>
            <line x1="12" y1="15" x2="12" y2="3"/>
          </svg>
        </span>
        <span class="btn-text">Download CV</span>
      </span>
    </a>
  </div>

  <div class="hero-main">
    <div class="hero-content">
      <div class="hero-info">
        <p class="hero-role">{profile.title.toUpperCase()}</p>
        <h1 class="hero-name">{profile.name}</h1>

        <div class="hero-contacts">
          <a href={`mailto:${profile.email}`} class="contact-item">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="4" width="20" height="16" rx="2"/>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
            </svg>
            <span>{profile.email}</span>
          </a>
          <a href={`tel:${profile.phone}`} class="contact-item">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
            </svg>
            <span>{profile.phone}</span>
          </a>
          <a href={profile.linkedin} target="_blank" rel="noopener" class="contact-item">
            <svg viewBox="0 0 24 24" fill="currentColor">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            <span>LinkedIn</span>
          </a>
          <div class="contact-item location">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
            <span>{profile.location}</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  .hero-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2.5rem 10%;
    position: relative;
    z-index: 10;
  }

  .btn-download {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: var(--color-accent);
    color: #000;
    padding: 1rem 2rem;
    border-radius: 50px;
    font-weight: 600;
    font-size: 1rem;
    height: 48px;
    min-width: 160px;
    overflow: hidden;
    transition: background 0.3s ease;
  }

  .btn-download:hover {
    background: #fff;
    color: #000;
  }

  .btn-content {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    height: 100%;
    width: 100%;
  }

  .btn-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -150%);
    opacity: 0;
    transition: transform 0.3s ease, opacity 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .btn-icon svg {
    width: 23px;
    height: 23px;
  }

  .btn-text {
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  .btn-download:hover .btn-icon {
    transform: translate(-50%, -50%);
    opacity: 1;
  }

  .btn-download:hover .btn-text {
    transform: translateY(150%);
    opacity: 0;
  }

  :global([data-theme="light"]) .btn-download {
    background: #4a9fd4;
    color: #fff;
  }

  :global([data-theme="light"]) .btn-download:hover {
    background: #fff;
    color: #000;
  }

  .hero-main {
    flex: 1;
    display: flex;
    align-items: center;
    padding: 0 10%;
    padding-bottom: 8rem;
    position: relative;
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 50%;
  }

  .hero-info {
    max-width: 800px;
  }

  .hero-role {
    color: var(--color-accent);
    font-size: 1.6rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    margin-bottom: 1.6rem;
  }

  .hero-name {
    font-size: 6rem;
    font-weight: 700;
    line-height: 1.05;
    margin-bottom: 7rem;
  }

  .hero-contacts {
    display: grid;
    grid-template-columns: repeat(2, auto);
    gap: 1.5rem 5rem;
    justify-content: start;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 1.25rem;
    color: var(--color-text);
    font-size: 1.25rem;
    transition: color 0.2s;
  }

  .contact-item:hover {
    color: var(--color-accent);
  }

  .contact-item.location {
    cursor: default;
  }

  .contact-item.location:hover {
    color: var(--color-text);
  }

  .contact-item svg {
    width: 28px;
    height: 28px;
    flex-shrink: 0;
    color: var(--color-accent);
  }

  @media (max-width: 1280px) {
    .hero-name {
      font-size: 5.5rem;
    }
  }

  @media (max-width: 1024px) {
    .hero-header {
      padding: 2rem 5%;
    }

    .hero-main {
      padding: 0 5%;
      padding-top: 2rem;
      padding-bottom: 7rem;
      text-align: left;
      align-items: flex-start;
    }

    .hero-content {
      max-width: 100%;
      margin-top: 0;
    }

    .hero-info {
      max-width: 100%;
    }

    .hero-contacts {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .hero-name {
      font-size: 4rem;
      margin-bottom: 3rem;
    }

    .hero-role {
      font-size: 1.25rem;
    }

    .contact-item {
      font-size: 1.1rem;
      gap: 1rem;
    }

    .contact-item svg {
      width: 24px;
      height: 24px;
    }
  }

  @media (max-width: 768px) {
    .hero-header {
      padding: 1.5rem 1.5rem;
    }

    .hero-main {
      padding: 0 1.5rem;
      padding-bottom: 6rem;
    }

    .hero-name {
      font-size: 3rem;
      margin-bottom: 2.5rem;
    }

    .hero-role {
      font-size: 1rem;
      margin-bottom: 1rem;
    }

    .contact-item {
      font-size: 1rem;
      gap: 0.75rem;
    }

    .contact-item svg {
      width: 20px;
      height: 20px;
    }

    .btn-download {
      padding: 0.875rem 1.5rem;
      font-size: 0.9rem;
      height: 46px;
      min-width: 140px;
    }
  }
</style>
