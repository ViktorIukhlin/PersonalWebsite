---
import { profile } from '../data/profile';
import ThemeToggle from './ThemeToggle.astro';
---

<section id="home" class="hero">
  <div class="hero-header">
    <ThemeToggle />

    <a href={`${import.meta.env.BASE_URL}Viktor_Iukhlin_CV.pdf`} class="btn-download" download>
      Download CV
    </a>
  </div>

  <div class="hero-content">
    <div class="hero-info">
      <p class="hero-role">{profile.title.toUpperCase()}</p>
      <h1 class="hero-name">{profile.name}</h1>

      <div class="hero-contacts">
        <a href={`mailto:${profile.email}`} class="contact-item">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="2" y="4" width="20" height="16" rx="2"/>
            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
          </svg>
          <span>{profile.email}</span>
        </a>
        <a href={`tel:${profile.phone}`} class="contact-item">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
          <span>{profile.phone}</span>
        </a>
        <a href={profile.linkedin} target="_blank" rel="noopener" class="contact-item">
          <svg viewBox="0 0 24 24" fill="currentColor">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
          <span>LinkedIn</span>
        </a>
        <div class="contact-item location">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/>
            <circle cx="12" cy="10" r="3"/>
          </svg>
          <span>{profile.location}</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  .hero-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2.5rem 10%;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 10;
  }

  .btn-download {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: var(--color-accent);
    color: #000;
    padding: 1rem 2rem;
    border-radius: 50px;
    font-weight: 600;
    font-size: 1rem;
    height: 48px;
    min-width: 160px;
    transition: background 0.2s, transform 0.2s;
  }

  .btn-download:hover {
    background: var(--color-accent-hover);
    color: #000;
    transform: translateY(-2px);
  }

  .hero-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 2rem 10%;
    padding-bottom: 8rem;
  }

  .hero-info {
    max-width: 700px;
  }

  .hero-role {
    color: var(--color-accent);
    font-size: 1.125rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
  }

  .hero-name {
    font-size: 5.5rem;
    font-weight: 700;
    line-height: 1.05;
    margin-bottom: 3rem;
  }

  .hero-contacts {
    display: grid;
    grid-template-columns: repeat(2, auto);
    gap: 1.25rem 4rem;
    justify-content: start;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: var(--color-text);
    font-size: 1.125rem;
    transition: color 0.2s;
  }

  .contact-item:hover {
    color: var(--color-accent);
  }

  .contact-item.location {
    cursor: default;
  }

  .contact-item.location:hover {
    color: var(--color-text);
  }

  .contact-item svg {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
    color: var(--color-accent);
  }

  @media (max-width: 1280px) {
    .hero-name {
      font-size: 4.5rem;
    }
  }

  @media (max-width: 1024px) {
    .hero-header {
      padding: 2rem 5%;
    }

    .hero-content {
      padding: 2rem 5%;
      padding-top: 7rem;
      padding-bottom: 7rem;
    }

    .hero-name {
      font-size: 3.5rem;
    }

    .hero-contacts {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .hero-header {
      padding: 1.5rem 1.5rem;
    }

    .hero-content {
      padding: 1.5rem;
      padding-top: 6rem;
      padding-bottom: 6rem;
    }

    .hero-name {
      font-size: 2.75rem;
    }

    .btn-download {
      padding: 0.875rem 1.5rem;
      font-size: 0.9rem;
      height: 46px;
      min-width: 140px;
    }
  }
</style>
