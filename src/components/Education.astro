---
import { profile } from '../data/profile';
---

<section id="education" class="section">
  <div class="container">
    <h2 class="section-title">Education</h2>

    <div class="education-item">
      <span class="edu-dot"></span>
      <div class="edu-content">
        <h4>{profile.education.university}</h4>
        <p class="edu-degree">{profile.education.degree} â€” {profile.education.period}</p>
      </div>
    </div>
  </div>
</section>

<style>
  .section {
    padding: 5rem 0;
  }

  .education-item {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .edu-dot {
    width: 12px;
    height: 12px;
    background: var(--color-accent);
    border-radius: 50%;
    margin-top: 0.25rem;
    flex-shrink: 0;
  }

  .edu-content h4 {
    font-size: 1.1rem;
    margin-bottom: 0.25rem;
  }

  .edu-degree {
    color: var(--color-accent);
  }
</style>
