---
import { profile } from '../data/profile';
---

<div class="background-layer" id="background-layer">
  <div class="background-gradient"></div>
  <div class="background-photo">
    <div class="photo-glow"></div>
    <div class="photo-frame">
      <img
        src={`${import.meta.env.BASE_URL}/${profile.heroImage}`}
        alt=""
        aria-hidden="true"
      />
    </div>
  </div>
  <div class="background-blur" id="background-blur"></div>
</div>

<style>
  .background-layer {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 0;
    overflow: hidden;
  }

  .background-gradient {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 80% 100% at 70% 50%, rgba(255, 140, 0, 0.4) 0%, transparent 50%),
      radial-gradient(ellipse 60% 80% at 75% 60%, rgba(255, 100, 0, 0.3) 0%, transparent 40%),
      linear-gradient(to right, #1a1a1a 0%, #2a2a2a 50%, #1a1a1a 100%);
    z-index: 0;
  }

  :global([data-theme="light"]) .background-gradient {
    background:
      radial-gradient(ellipse 80% 100% at 70% 50%, rgba(74, 159, 212, 0.3) 0%, transparent 50%),
      radial-gradient(ellipse 60% 80% at 75% 60%, rgba(74, 159, 212, 0.2) 0%, transparent 40%),
      linear-gradient(to right, #f0f0f0 0%, #e8e8e8 50%, #f0f0f0 100%);
  }

  .background-photo {
    position: absolute;
    top: 50%;
    right: 15%;
    transform: translateY(-50%);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .photo-glow {
    position: absolute;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(255, 184, 0, 0.4) 0%, rgba(255, 140, 0, 0.2) 40%, transparent 70%);
    border-radius: 50%;
    filter: blur(40px);
  }

  :global([data-theme="light"]) .photo-glow {
    background: radial-gradient(circle, rgba(74, 159, 212, 0.4) 0%, rgba(74, 159, 212, 0.2) 40%, transparent 70%);
  }

  .photo-frame {
    position: relative;
    width: 420px;
    height: 420px;
    border-radius: 50%;
    overflow: hidden;
    border: 4px solid rgba(255, 184, 0, 0.3);
    box-shadow:
      0 0 60px rgba(255, 184, 0, 0.3),
      0 0 100px rgba(255, 140, 0, 0.2);
  }

  :global([data-theme="light"]) .photo-frame {
    border-color: rgba(74, 159, 212, 0.3);
    box-shadow:
      0 0 60px rgba(74, 159, 212, 0.3),
      0 0 100px rgba(74, 159, 212, 0.2);
  }

  .photo-frame img {
    width: 120%;
    height: 120%;
    object-fit: cover;
    object-position: center 65%;
  }

  .background-blur {
    position: absolute;
    inset: 0;
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    background: rgba(0, 0, 0, 0.4);
    opacity: 0;
    transition: opacity 0.6s ease;
    pointer-events: none;
    z-index: 10;
  }

  :global([data-theme="light"]) .background-blur {
    background: rgba(245, 245, 245, 0.5);
  }

  .background-blur.active {
    opacity: 1;
  }

  @media (max-width: 1280px) {
    .photo-frame {
      width: 350px;
      height: 350px;
    }

    .photo-glow {
      width: 400px;
      height: 400px;
    }
  }

  @media (max-width: 1024px) {
    .background-photo {
      right: 5%;
      top: 40%;
      transform: translateY(-50%);
    }

    .photo-frame {
      width: 320px;
      height: 320px;
    }

    .photo-glow {
      width: 380px;
      height: 380px;
    }
  }

  @media (max-width: 768px) {
    .background-photo {
      right: -10%;
      top: 35%;
    }

    .photo-frame {
      width: 280px;
      height: 280px;
    }

    .photo-glow {
      width: 320px;
      height: 320px;
    }
  }

  @media (max-width: 480px) {
    .background-photo {
      right: -20%;
      top: 30%;
    }

    .photo-frame {
      width: 240px;
      height: 240px;
    }

    .photo-glow {
      width: 280px;
      height: 280px;
    }
  }
</style>

<script>
  function initBackgroundBlur() {
    const blur = document.getElementById('background-blur');
    if (!blur) return;

    const blurSections = ['summary', 'experience', 'skills', 'education'];

    function checkBlur() {
      const scrollY = window.scrollY;
      const windowHeight = window.innerHeight;
      const documentHeight = document.documentElement.scrollHeight;
      const scrollCenter = scrollY + windowHeight / 2;

      // Check if at bottom of page (Links section)
      const isAtBottom = scrollY + windowHeight >= documentHeight - 150;

      // Check if Links section is visible
      const linksSection = document.getElementById('links');
      const isLinksVisible = linksSection &&
        scrollY + windowHeight > linksSection.offsetTop + 100;

      // If at bottom or Links is visible, remove blur
      if (isAtBottom || isLinksVisible) {
        blur?.classList.remove('active');
        return;
      }

      let shouldBlur = false;

      for (const sectionId of blurSections) {
        const section = document.getElementById(sectionId);
        if (section) {
          const rect = section.getBoundingClientRect();
          const sectionTop = scrollY + rect.top;
          const sectionBottom = sectionTop + rect.height;

          if (scrollCenter >= sectionTop && scrollCenter <= sectionBottom) {
            shouldBlur = true;
            break;
          }
        }
      }

      if (shouldBlur) {
        blur?.classList.add('active');
      } else {
        blur?.classList.remove('active');
      }
    }

    window.addEventListener('scroll', checkBlur, { passive: true });
    checkBlur();
  }

  document.addEventListener('DOMContentLoaded', initBackgroundBlur);
  document.addEventListener('astro:page-load', initBackgroundBlur);
</script>
